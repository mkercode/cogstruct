<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thoughtjournal.fragments.TJPageSix">

    <TextView
        android:id="@+id/page_six_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="@string/tj_review_title"
        android:textColor="@color/colorGreenText"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/review_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="@color/colorGreenText"
        android:textSize="20sp"
        android:text="@string/tj_review_description"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page_six_title" />


    <ScrollView
        android:id="@+id/review_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tj_submit"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/review_text">

        <GridLayout
            android:id="@+id/review_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignBounds"
            android:columnCount="2"
            android:columnOrderPreserved="true"
            android:rowCount="9">

            <TextView
                android:id="@+id/place_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:padding="4dp"
                android:text="Where did it happen?"
                android:textColor="@color/colorGreenText"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/place_review_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/place_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Field Required!"
                    android:gravity="top"
                    style="@style/requiredText"/>
            </LinearLayout>

            <TextView
                android:id="@+id/time_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:padding="4dp"
                android:text="When did it happen?"
                android:textColor="@color/colorGreenText"
                android:textSize="15sp" />
            <LinearLayout
                android:id="@+id/time_review_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/time_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Field Required!"
                    android:gravity="top"
                    style="@style/requiredText"/>
            </LinearLayout>


            <TextView
                android:id="@+id/people_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:padding="4dp"
                android:text="Who was I with?"
                android:textColor="@color/colorGreenText"
                android:textSize="15sp" />
            <LinearLayout
                android:id="@+id/people_review_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/people_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_required"
                    android:gravity="top"
                    style="@style/requiredText"/>
            </LinearLayout>


            <TextView
                android:id="@+id/situation_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:paddingStart="4dp"
                android:paddingTop="4dp"
                android:text="@string/tj_page_two_title"
                android:textColor="@color/colorGreenText"
                android:textSize="15sp" />
            <LinearLayout
                android:id="@+id/situation_review_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/situation_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_optional"
                    android:gravity="top"
                    style="@style/optionalText"/>
            </LinearLayout>


            <TextView
                android:id="@+id/behavior_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:padding="4dp"
                android:text="What did I do?"
                android:textColor="@color/colorGreenText"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/behavior_review_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/behavior_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_required"
                    android:gravity="top"
                    style="@style/requiredText"/>
            </LinearLayout>


            <TextView
                android:id="@+id/emotion_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:paddingStart="4dp"
                android:paddingTop="4dp"
                android:text="What did I feel?"
                android:textColor="@color/colorGreenText"
                android:textSize="15sp" />
            <LinearLayout
                android:id="@+id/emotion_review_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/main_emotion_question_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Main emotion:"
                    android:textColor="@color/colorGreenText"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/main_emotion_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_required"
                    android:gravity="top"
                    style="@style/requiredText"/>
                <TextView
                    android:id="@+id/emotional_intensity_question_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Intensity:"
                    android:textColor="@color/colorGreenText"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/emotion_intensity_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_required"
                    android:gravity="top"
                    style="@style/requiredText"/>
                <TextView
                    android:id="@+id/emotional_details_question_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Details:"
                    android:textColor="@color/colorGreenText"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/emotion_details_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_optional"
                    android:gravity="top"
                    style="@style/optionalText"/>
            </LinearLayout>


            <TextView
                android:id="@+id/thoughts_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:padding="4dp"
                android:text="What were my thoughts?"
                android:textColor="@color/colorGreenText"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/thoughts_review_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/thoughts_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_required"
                    style="@style/requiredText" />
            </LinearLayout>

        </GridLayout>
    </ScrollView>

    <Button
        android:id="@+id/tj_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button_background"
        android:text="Submit"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="2dp"/>


    <Button
        android:id="@+id/tj_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button_background"
        android:text="Edit"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="8dp"
        android:elevation="2dp"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bottom_bar_backround"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
