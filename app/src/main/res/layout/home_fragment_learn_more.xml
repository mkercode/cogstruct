<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.fragments.LearnMoreFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/back_toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/learn_more_title"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/learn_more_title"
        android:textColor="@color/colorWhite"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/learn_more_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/learn_more_icon"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:contentDescription="@string/bad_behaviors_icon_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/learn_more" />


            <TextView
                android:id="@+id/cbt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:text="@string/cbt_title"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/learn_more_icon" />

            <TextView
                android:id="@+id/cbt_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:gravity="center_horizontal"
                android:text="@string/cbt_description"
                android:textColor="@color/colorGreenText"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cbt_title" />

            <TextView
                android:id="@+id/worksheets_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:text="@string/worksheets_title"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/cbt_description"
                app:layout_constraintStart_toStartOf="@+id/cbt_description"
                app:layout_constraintTop_toBottomOf="@+id/cbt_description" />

            <TextView
                android:id="@+id/worksheets_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="@string/worksheets_description"
                android:textColor="@color/colorGreenText"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/cbt_description"
                app:layout_constraintStart_toStartOf="@+id/cbt_description"
                app:layout_constraintTop_toBottomOf="@+id/worksheets_title" />

            <TextView
                android:id="@+id/objectivity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:text="@string/objectivity_title"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/cbt_description"
                app:layout_constraintStart_toStartOf="@+id/cbt_description"
                app:layout_constraintTop_toBottomOf="@+id/worksheets_description" />

            <TextView
                android:id="@+id/objectivity_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="@string/objectivity_description"
                android:textColor="@color/colorGreenText"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/cbt_description"
                app:layout_constraintStart_toStartOf="@+id/cbt_description"
                app:layout_constraintTop_toBottomOf="@+id/objectivity_title" />

            <TextView
                android:id="@+id/other_therapies_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:text="@string/other_therapies_title"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/cbt_description"
                app:layout_constraintStart_toStartOf="@+id/cbt_description"
                app:layout_constraintTop_toBottomOf="@+id/objectivity_description" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"
                android:text="@string/other_therapies_description"
                android:textColor="@color/colorGreenText"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/cbt_description"
                app:layout_constraintStart_toStartOf="@+id/cbt_description"
                app:layout_constraintTop_toBottomOf="@+id/other_therapies_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>