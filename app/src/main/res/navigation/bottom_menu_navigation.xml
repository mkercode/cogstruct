<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_item_navigation"
    app:startDestination="@id/fragmentActivityView">

    <fragment
        android:id="@+id/fragmentActivityView"
        android:name="com.loopbreakr.brainstruct.ActivityViewFragment"
        android:label="fragment_activity_view"
        tools:layout="@layout/fragment_activity_view" >
        <action
            android:id="@+id/action_fragmentActivityView_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_fragmentActivityView_to_insightsFragment"
            app:destination="@id/insightsFragment" />
        <action
            android:id="@+id/action_fragmentActivityView_to_learnMoreFragment"
            app:destination="@id/learnMoreFragment" />
        <action
            android:id="@+id/action_fragmentActivityView_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.loopbreakr.brainstruct.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/insightsFragment"
        android:name="com.loopbreakr.brainstruct.InsightsFragment"
        android:label="fragment_insights"
        tools:layout="@layout/fragment_insights" />
    <fragment
        android:id="@+id/learnMoreFragment"
        android:name="com.loopbreakr.brainstruct.LearnMoreFragment"
        android:label="fragment_learn_more"
        tools:layout="@layout/fragment_learn_more" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.loopbreakr.brainstruct.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
</navigation>